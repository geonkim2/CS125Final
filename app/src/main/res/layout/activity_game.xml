<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/left_button"
        android:layout_width="66dp"
        android:layout_height="67dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        app:layout_constraintBottom_toBottomOf="@+id/left_image"
        app:layout_constraintEnd_toStartOf="@+id/right_button"
        app:layout_constraintTop_toTopOf="@+id/left_image"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/down_button"
        android:layout_width="66dp"
        android:layout_height="69dp"
        app:layout_constraintEnd_toEndOf="@+id/down_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/down_image"
        tools:layout_editor_absoluteY="639dp" />

    <Button
        android:id="@+id/up_button"
        android:layout_width="66dp"
        android:layout_height="67dp"
        app:layout_constraintEnd_toEndOf="@+id/up_image"
        app:layout_constraintStart_toStartOf="@+id/up_image"
        tools:layout_editor_absoluteY="505dp" />

    <Button
        android:id="@+id/right_button"
        android:layout_width="66dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="@+id/right_image"
        app:layout_constraintTop_toTopOf="@+id/right_image"
        tools:layout_editor_absoluteX="250dp" />

    <ImageView
        android:id="@+id/down_image"
        android:layout_width="66dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/down_arrow"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="639dp" />

    <ImageView
        android:id="@+id/left_image"
        android:layout_width="66dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/left_arrow"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="572dp" />

    <ImageView
        android:id="@+id/up_image"
        android:layout_width="66dp"
        android:layout_height="68dp"
        app:srcCompat="@drawable/up_arrow"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="504dp" />

    <ImageView
        android:id="@+id/right_image"
        android:layout_width="67dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/right_arrow"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="572dp" />

</android.support.constraint.ConstraintLayout>